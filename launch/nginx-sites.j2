upstream djangoapp_server {
    server localhost:8000 fail_timeout=0;
}
 
server {
    #EC2 instance security group must be configured to accept http connections over Port 80
    listen 80;
    server_name default;
 
    access_log  /var/log/nginx/nginx-access.log;
    error_log  /var/log/nginx/nginx-error.log info;
 
    keepalive_timeout 5;
 
    # Directories to serve
    location /static/ {
        alias {{ src }}/static/;
    }
 
    # Redirect the rest to your django app server
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
 
        if (!-f $request_filename) {
            proxy_pass http://djangoapp_server;
            break;
        }
    }
}
